{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "./",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "moduleResolution": "Node"
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "test"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}